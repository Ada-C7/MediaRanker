<h2>Add a New Book</h2>

<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :creator %>
  <%= f.text_field :creator%>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit value: "Create Work" %>
<% end %>

<%= link_to "Cancel", books_path %>
