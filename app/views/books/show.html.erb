<section id="content">

  <h2><%= @result_book.title %></h2>

  <h3>Created by: ?</h3>
  <p>Published: <%= @result_book.pub_year %></p>
  <p><%= @result_book.description %></p>

<%= link_to "Back to book list", books_path, class: :button %>
<%= link_to "Edit", edit_book_path, class: :button %>
<%= link_to "Delete", book_path, class: :button %>
<%= link_to "Upvote", votes_upvote_path(work_id: @result_book.id), class: :button, method: :post %>


<h3> <%= @result_book.votes.length %> Votes for this album</h3>


  <table>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    <td>User who voted</td>
    <td>Date voted</td>

  </table>

</section>
