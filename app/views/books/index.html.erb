<h3>List of Books</h3>

<table>
  <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.votes_count %></td>
      <td><%= link_to book.title, work_path(book.id) %></td>
      <td><%= book.creator %></td>
      <td><%= book.publication_year %></td>
      <td><%= link_to "Upvote", upvote_path(book.id), method: :post %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to "View all media", root_path %></h2>
<h2><%= link_to "Add a new book", new_book_path %></h2>
