<h1>List of Books</h1>
<table>
<tr><th>Votes</th><th>Title</th><th>Created By</th><th>Published</th><th>Upvote</th></tr>
<% @books.each do |book| %>
<tr><td><%= book.votes.length %></td><td><%= book.title %></td><td><%= book.user.username %></td><td><%= book.publication_year %></td><td><%= button_to "Upvote", votes_path, params: { work_id: book.id}%></td></tr>
<% end %>
</table>

<%= button_to "View all media", root_path, method: :get %>
<%= button_to "Add a new book", books_new_path, method: :get %>
