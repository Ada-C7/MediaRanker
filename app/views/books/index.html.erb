<h2>List of books</h2>

<% @works.each do |work| %>
<% if work.category == "book" %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Publication Year</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to work.title, work_path(work.id) %></td>
      <td><%= work[:creator] %></td>
      <td><%= work[:publication_year] %></td>
      <% end %>
    <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "View All Media", works_path %>
<%= link_to "Add a New Book", new_book_path %>
