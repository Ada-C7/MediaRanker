<h3>List of Movies</h3>
<section class="media-table">
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.votes.size %></td>
        <td><%= link_to book.title, work_path(book.id) %></td>
        <td><%= book.creator %></td>
        <td><%= book.publication_year %></td>
        <td><%= link_to "Upvote", upvote_path(book.id)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "View all media", root_path %>
  <%= link_to "Add a new book", new_book_path %>
</section>
