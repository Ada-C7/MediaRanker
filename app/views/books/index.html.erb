<h1>List of Books</h1>

<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>

  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.vote_count %></td>
    <td><%= link_to book.title, work_path(book.id) %></td>
    <td><%= book.creator %></td>
    <td><%= book.publication_year %></td>
    <td><%= link_to "Upvote", upvote_path(book.id), method: :post %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Back to all media", root_path %>
<%= link_to "Add new book", new_book_path %>
