<h1>List of Books</h1>

<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Creator</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.votes %></td>
    <td><%= link_to book.title, work_path(book.id) %></td>
    <td><%= book.creator %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Back to all media", root_path %>
<%= link_to "Add new book", new_book_path %>
