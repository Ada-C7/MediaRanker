<%= form_for @book, url: books_path, method: form_method do |f| %>
  <p>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  </p>
<p>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>
</p>
  <%= f.submit action_name, class: class_name %>
<% end %>
