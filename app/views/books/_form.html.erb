<section>
  <%= form_for @book, :url => url_for(:controller => 'books', :action => 'create') do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>

  <%= t.label :publication_year %>
  <%= t.text_field :publication_year %>

  <%= t.label :description %>
  <%= t.text_field :description %>

  <%= t.submit value: "#{submit_text}" %>
  <% end %>
</section>
