
<main class="row">
<h3>List of Users</h3>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th width = "100">Votes</th>
      <th width = "200">Joined</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user.username, user_path(user.id) %>
      </td>
      <td>
        <%= user.votes.length %>
      </td>
      <td>
        <%= user.created_at %>
      </td>
    </tr>

  </tbody>
  <% end %>
</table>
</main>
