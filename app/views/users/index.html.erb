<main class="row">
  <section>
      <table>

      <thead>
        <tr>
          <th>Username</th>
          <th>Votes</th>
          <th>Joined</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= link_to user.username, user_path(user.id) %></th>
            <th><%= user.votes.count %></th>
            <th><%= user.created_at.strftime("%b %d, %Y") %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <%= button_to "Back to All Media", homepage_path, :class => "button", :method => :get %>
</main>
