<section class="index row">
  <h3 class="user-index-header">List of Users</h3>
  <article class="users-list">
    <% if @users.empty? %>
    <p>
      No users found.
    </p>
    <% else %>
    <table class="users-table">
      <thead>
        <tr>
          <th>
            Username
          </th>
          <th>
            Votes
          </th>
          <th>
            Joined
          </th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>

      <tr>
        <td>
          <%= link_to user.username, user_path(user.id) %>
        </td>
        <td>
          <%= user.votes.count %>
        </td>
        <td>
          <%= user.created_at.strftime("%b %d, %Y") %>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>
    <% end %>
  </article>
  <section>
    <%= link_to "Back to media list", works_path, class: "button" %>
  </section>


</section>
