<h3>List of Users</h3>
<% if @users != nil %>
<table>
  <thead>
    <tr>
      <th>
        Username
      </th>
      <th>
        Votes
      </th>
      <th>
        Joined
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td><%= user.votes.count %></td>
      <td><%= user.created_at.strftime("%a %d, %Y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to "Back to Media List", root_path, :class => "button"%>
