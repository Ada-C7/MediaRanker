<h3>User Summary: <%=link_to @user.username, user_path(@user), method: :get%></h3>

<p><%= "Joined site #{@user.created_at.strftime("%B %d, %Y")}" %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote|%>
    <% item = Item.find(vote.item_id)%>
    <tr>
      <td> <%= item.title %> </td>
      <td> <%= item.creator %> </td>
      <td> <%= item.publication_year %> </td>
      <td> <%= item.category %> </td>
      <td> <%= vote.created_at.strftime("%B %d, %Y")%>  </td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= button_to "See all Users", users_path, method: :get%>

<%= button_to "Back to Media List", items_path, method: :get%>
