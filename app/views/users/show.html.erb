<h1> User summary: <%= link_to "#{@user[:username]}" %></h1>
<h2> Joined site <%= @user.created_at %></h2>
<h3> Votes </h3>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  <% @user.works.each do |work| %>
    <tr>
      <td><%= link_to "#{work.title}", work_path(work.id) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= work.category %></td>
      <td><%= work.votes.find_by(user_id: @user.id).created_at %></td>
    </tr>
  <% end %>
</table>

<%= link_to "See all users", users_path, :class => "button" %>
<%= link_to "Back to Media List", root_path, :class => "button" %>
