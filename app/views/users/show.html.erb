<section>

  <h3>
    User Summary: <%= link_to @user.name, user_path(@user.id) %>
  </h3>
  <p>
    Joined site <%= (@user.created_at).strftime('%B %d, %Y') %>
  </p>

  <h4>Votes</h4>

  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
        <tr>
          <% if vote.work != nil %>
            <td> <%= link_to vote.work.title, work_path(vote.work_id) %></td>
            <td> <%= vote.work.creator %> </td>
            <td> <%= vote.work.pub_yr %> </td>
            <td> <%= vote.work.category %> </td>
            <td> <%= (vote.work.created_at).strftime('%B %d, %Y') %> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "See all Users", users_path, class: "button" %>
  <%= link_to "Back to Media List", root_path, class: "button" %>
</section>
