<h3>User Summary: <%= @user.username %></h3>
<p>Joined site <%= @user.created_at.strftime('%b %e, %Y') %></p>

<h4>Votes</h4>

<% if @user.votes.empty? %>
  <p><%= @user.username %> has not cast any votes.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
        <tr>
          <td><%= vote.work.title %></td>
          <td><%= vote.work.creator %></td>
          <td><%= vote.work.publication_year %></td>
          <td><%= vote.created_at.strftime('%b %e, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "See all Users", users_path %>
<%= link_to "Back to Media List", root_path %>
