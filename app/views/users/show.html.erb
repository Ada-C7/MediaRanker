<h1>User Summary: <%= @user.name %></h1>
Joined site <%= @user.created_at.strftime("%b %d, %Y") %></br>
<%= @user.votes.count %> Votes</br>

<table>
  <th>
    Media Title
  </th>
  <th>
    Created By
  </th>
  <th>
    Published
  </th>
  <th>
    Category
  </th>
  <th>
    Voted On
  </th>

  <% @user.votes.each do |vote| %>
    <% work = Work.find(vote.work_id) %>
    <tr>
      <td>
        <%= link_to work.title, work_path(vote.work_id) %>
      </td>
      <td>
        <%= work.creator %>
      </td>
      <td>
        <%= work.publication_year %>
      </td>
      <td>
        <%= work.category %>
      </td>
      <td>
        <%= vote.created_at.strftime("%b %d, %Y") %>
      </td>
    </tr>
    <% end %>
</table>

<%= link_to "See all Users", users_path %>
<%= link_to "Back to Media List", works_path %>
