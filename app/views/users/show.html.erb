<h1>User Summary: <%= link_to @user.name, user_path(@user.id) %></h1>

<h3>Joined site <%= @user.created_at %></h3>

<h2>Votes</h2>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  <% @user.votes.each do |vote| %>
  <tr>
    <td> <%= link_to vote.work.title, work_path(vote.work_id) %> </td>
    <td> <%= vote.work.creator %> </td>
    <td> <%= vote.work.publication_year %> </td>
    <td> <%= vote.work.category %> </td>
    <td> <%= vote.created_at %> </td>
  </tr>
  <% end %>
</table>

<%= link_to 'See all users', users_path %>
<%= link_to 'Back to media list', root_path %>
