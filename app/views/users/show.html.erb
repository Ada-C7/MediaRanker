<h3>User Summary: <%= link_to @user.username, user_path %></h3>
<p>Joined site <%= @user.created_at %></p>

<h3>Votes</h3>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td><%= vote.work.title %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.year_published %></td>
        <td><%= vote.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "See All Users", users_path %></p>
<p><%= link_to "Back to Media List", root_path %></p>
