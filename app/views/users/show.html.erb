<h3>User Summary: <%= @result_user.name %></h3>
<p>
  Joined site <%= @result_user.created_at.strftime("%b %d, %Y") %>
</p>

<h3>Votes</h3>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
<% if @user_votes != nil %>
<% @user_votes.each do |vote| %>
  <tr>
    <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
    <td><%= vote.work.creator %></td>
    <td><%= vote.work.publication_year %></td>
    <td><%= vote.work.category %></td>
    <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
  </tr>
  <% end %>
  <% end %>
</table>



<p>
  <%= link_to "See all users", users_path %>
</p>
<p>
  <%= link_to "Back to media list", root_path %>
</p>
