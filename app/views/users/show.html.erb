<section class="row">
  <h3>User Summary: <%= @result_user.name %></h3>
  <p>Joined site <%= @result_user.created_at.strftime("%b %d, %Y") %></p>

  <h4><%= @result_user.votes.length %> Votes</h4>
  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @result_user.votes.each do | vote | %>
      <tr>
        <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.year %></td>
        <td><%= vote.work.category.capitalize %></td>
        <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "See all users", users_path, class: :button %>
  <%= link_to "Back to media list", root_path, class: :button %>

</section>
