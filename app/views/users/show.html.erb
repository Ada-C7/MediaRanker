<section>

  <h3>
    User Summary: <%= link_to @user.name, user_path(@user.id) %>
  </h3>
  <p>
    Joined site <%= @user.created_at %>
  </p>

  <h4>Votes</h4>

  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
        <tr>
          <td> <%= link_to vote.work.title, work_path(vote.work_id) %></td>
          <td> <%= vote.work.creator %> </td>
          <td> <%= vote.work.pub_yr %> </td>
          <td> <%= vote.work.category %> </td>
          <td> <%= vote.work.created_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
