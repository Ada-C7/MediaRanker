<h3>User Summary: <%= @user.username %></h3>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.works.each do |work| %>
    <tr>
    <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= work.category %></td>
      <td><%= work.votes.find_by(user: @user).created_at.strftime("%b %d, %Y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: "button" %>
<%= link_to "Back to Media List", home_path, class: "button" %>
