<h2>Add a New User</h2>

<% if @user.errors.messages.length > 0 %>
<section class="errors">
  <h2> Something went wrong! </h2>
  <ul>
    <% @user.errors.messages.each do |field, problem_list| %>
    <% problem_list.each do |problem| %>
    <li>
      <%= field %>:
      <%= problem %>
    </li>
    <% end %>
    <% end %>
  </ul>
</section>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>
