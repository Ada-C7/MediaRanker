<h3>List of Movies</h3>

<table>
  <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= album.votes_count %></td>
      <td><%= link_to movie.title, work_path(movie.id) %></td>
      <td><%= movie.creator %></td>
      <td><%= movie.publication_year %></td>
      <td><%= link_to "Upvote", upvote_path(movie.id), method: :post %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to "View all media", works_path %></h2>
<h2><%= link_to "Add a new movie", new_movie_path %></h2>
