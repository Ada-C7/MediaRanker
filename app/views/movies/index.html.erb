<h2>List of Movies</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Publication Year</th>
    </tr>
  </thead>
      <% @works.each do |work| %>
  <tbody>
    <tr>
      <td><%= link_to work.title, work_path(work.id) %></td>
      <td><%= work[:creator] %></td>
      <td><%= work[:publication_year] %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "View All Media", works_path %>
<%= link_to "Add a New Movie", new_movie_path %>
