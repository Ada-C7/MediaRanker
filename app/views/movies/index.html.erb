<h1>List of Movies</h1>

<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.vote_count %></td>
    <td><%= link_to movie.title, work_path(movie.id) %></td>
    <td><%= movie.creator %></td>
    <td><%= movie.publication_year %></td>
    <td><%= link_to "Upvote", upvote_path(movie.id), method: :post %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Back to all media", root_path %>
<%= link_to "Add new movie", new_movie_path %>
