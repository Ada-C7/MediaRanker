<header>
  <h1>Media Ranker</h1>
</header>
<main>
  <section>
    <h2>Movies</h2>
    <ul>
    <% Work.all.where(category: "movie").each do |movie| %>
      <li><%= movie.title %></li>
    <% end %>
    </ul>
    <%= link_to "All Movies", movies_path %>
  </section>

  <section>
    <h2>Books</h2>
    <ul>
    <% Work.all.where(category: "book").each do |book| %>
      <li><%= book.title %></li>
    <% end %>
    </ul>
    <%= link_to "All Books", books_path %>
  </section>

  <section>
    <h2>Albums</h2>
    <ul>
    <% Work.all.where(category: "albumn").each do |album| %>
      <li><%= album.title %></li>
    <% end %>
    </ul>
    <%= link_to "All Albumns", albums_path %>
  </section>
</main>
