<p id="notice"><%= notice %></p>

<h1>Submissions</h1>

<h1>Spotlight</h1>


<h1>Albums</h1>
<ul>
     <% @album_submissions.each do | submission | %>
     <li> <%=  submission.title %> by  <%=  submission.author %></li>
     <li> <%=  submission.votes.count %></li>
     <% end %>
</ul>

<h1>Books</h1>
<ul>
     <% @book_submissions.each do | submission | %>
     <li> <%=  submission.title %> by  <%=  submission.author %></li>
     <li> <%=  submission.votes.count %></li>
     <% end %>
</ul>

<h1>Movies</h1>
<ul>
     <% @movie_submissions.each do | submission | %>
     <li> <%=  submission.title %> by  <%=  submission.author %></li>
     <li> <%=  submission.votes.count %></li>
     <% end %>
</ul>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
