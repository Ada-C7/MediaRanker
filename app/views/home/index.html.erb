<section class="row">
<h3>Media Spotlight: <%= %></h3>
<p>description here</p>
</section>

<% @works.each do |category, works| %>
<section class="top-ten columns large-4 small-12">
    <h3><%= "Top #{category.capitalize}"%></h3>
      <ul class="works-list">
        <% works.each do |work| %>
          <li>
            <h4>
              <%= link_to work.title, work_path(work) %>
              <span class="small"> by <%= work.creator %>
            </h4>
            <p><%= work.votes.count %> votes</p>
          </li>
        <% end %>
      </ul>

  <%= link_to "View More #{category.capitalize}", works_path(category), class: "button" %>
</section>
  <% end %>
