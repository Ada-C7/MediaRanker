<h1>Spotlight</h1>
<ul>
     <% @spotlight.each do | submission | %>
     <li> <%= link_to submission.title, submission_path(submission.id) %> by <%=  submission.author %></li>
     <li> <%=  submission.summary %>
     <li> <%=  submission.votes.size %></li>
     <% end %>
</ul>
<% content_for :albums do %>
     <h1>Top Albums</h1>
     <ul>
          <% @albums.each do | submission | %>
          <li> <%= link_to submission.title, submission_path(submission.id) %> by  <%=  submission.author %></li>
          <li> <%= submission.votes.size %></li>
          <% end %>
     </ul>
     <p> <%= link_to "View More Albums", albums_path %> </p>
<% end %>

