<h1>Add an Album</h1>

<%= form_for @album do |f| %>
  <%= f.hidden_field :category, :value => "album" %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <%= f.label :creator %>
 <%= f.text_field :creator %>
 <%= f.label :publication_year %>
 <%= f.number_field :publication_year %>
 <%= f.label :description %>
 <%= f.text_area :description %>

 <%= f.submit %>

 <% end %>
