<h3>List of Albums</h3>

<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
<% @albums.each do |album| %>
  <tr>
    <td><%= album.votes.count %></td>
    <td><%= link_to album.title, work_path(album.id) %></td>
    <td><%= album.creator %></td>
    <td><%= album.publication_year %></td>
    <td><%= link_to "Upvote", upvote_path(album.id), method: :post %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Back to all media", root_path %>
<%= link_to "Add new album", new_album_path %>
