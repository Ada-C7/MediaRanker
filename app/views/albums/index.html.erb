<h3>List of Albums</h3>
<section class="media-table">
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td><%= album.votes.size %></td>
        <td><%= link_to album.title, work_path(album.id) %></td>
        <td><%= album.creator %></td>
        <td><%= album.publication_year.to_i %></td>
        <td><%= "Upvote"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "View all media", root_path %>
  <%= link_to "Add a new album", new_album_path %>
</section>
