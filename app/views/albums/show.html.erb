<section class="show">
<h3><%= @album.title %></h3>
<p>Created by: <%= @album.creator %></p>
<p>Published: <%= @album.publication_date %></p>

<%= link_to "Delete", album_path(@album.id),
    data: { confirm: "Are you sure you want to delete this album?" },
    method: :delete
%>
<%= link_to "Back to movie list", albums_path %>
<%= link_to "Edit", edit_album_path(@album.id) %>
<%= link_to "Upvote", album_vote_path(@album.id), :method => :post %>
<%= link_to "Delete", album_path(@album.id),
    data: { confirm: "Are you sure you want to delete this book?" },
    method: :delete
%>
</section>

<section class="voting">
  <h3><%= @album.votes.length %></h3>
  <% @album.votes.each do |vote| %>
  <%= User.find(vote.user_id).username %>
  <% end %>

</section>
