<section class="show">
<h3><%= @album.title %></h3>
<p>Created by: <%= @album.creator %></p>
<p>Published: <%= @album.publication_year %></p>

<%= link_to "Delete", album_path(@album.id),
    data: { confirm: "Are you sure you want to delete this album?" },
    method: :delete
%>
<%= link_to "Back to albums list", albums_path %>
<%= link_to "Edit", edit_album_path(@album.id) %>
<%= link_to "Upvote", album_vote_path(@album.id), :method => :post %>
<%= link_to "Delete", album_path(@album.id),
    data: { confirm: "Are you sure you want to delete this album?" },
    method: :delete
%>
</section>

<section class="voting">
  <h3><%= @album.votes.length %> votes for this movie</h3>
  <ul>
  <li>
    <h3>User</h3>
  </li>
  <% @album.votes.each do |vote| %>
  <li>
    <%=link_to User.find(vote.user_id).username, user_path(vote.user_id) %>
  </li>
  <% end %>
  </ul>

</section>
