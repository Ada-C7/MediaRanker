      <%= link_to work.title, work_path(work.id)%>
    </li>
  <% end %>
</ul>
<p><%= link_to "View More Books", books_path, class: "button" %></p>
</section>

<section>
<h2>Top Albums</h2>
<ul>
  <% @albums.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work.id)%>
    </li>
  <% end %>
</ul>
<p><%= link_to "View More Albums", albums_path, class: "button" %></p>
</section>

</main>
