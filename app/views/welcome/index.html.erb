<section>
<h2> Media Spotlight </h2>
  <h3><%= "#{@media_spotlight.title}" %></h3>
  <br> <%= "Created By: #{@media_spotlight.creator}" %>
  <br> <%= "Published: #{@media_spotlight.pub_date}" %>
  <br> <%= "#{@media_spotlight.description}" %>
</section>

<section>
  <br>
<h3> Albums </h3>
<ul>
  <% @albums.each do |work| %>
  <li>
    <%= link_to "Title: #{work.title}", work_path(work.id) %>
    <%= "Created By: #{work.creator}" %>
    <%= "Published: #{work.pub_date}" %>
  </li>
  <% end %>
</ul>
<%= link_to "See More Albums", albums_path %>
</section>

