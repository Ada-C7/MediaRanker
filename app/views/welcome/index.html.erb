
<header>
  <%=image_tag ("owl.jpg")%>
  <%=link_to "Media Ranker", welcome_index_path%>
  <strong>Ranking the Best of Everything </strong>
</header>
<div> Spotlight goes here</div>
<section>
  <h2> Top albums: </h2>
    <%@top_albums.each do |album|%>
        <h4><%=link_to album.title, work_path(album.id)%>
        <small> by <%=album.creator %></small>
        <p> number of votes</p></h4>
    <%end%>
    <%=link_to "View more albums", albums_path %>
  <h3> Top books: </h3>
    <%@top_books.each do |book|%>
        <p><%=book.title %></p>
        <p> <%=book.creator %></p>
    <%end%>
        <%=link_to "View more books", books_path %>
  <h3> Top movies: </h3>
    <%@top_movies.each do |movie|%>
        <p><%=movie.title %></p>
        <p> <%=movie.creator %></p>
    <%end%>
        <%=link_to "View more movies", movies_path %>
</section>
