<main class="row">
  <section class="top-ten columns large-4 small-12">
    <h3>Top Movies</h3>
    <ul>
      <% @movies[0..10].each do |movie| %>
      <li><h4><%= link_to movie.title, work_path(movie) %>
        <small>by: <%= @user %> <small>
          <p># Votes</p>
          <h4></li>
            <% end %>
          </ul>
        </section>

        <section class="top-ten columns large-4 small-12">
          <h3>Top Books</h3>
          <ul>
            <% @books[0..10].each do |book| %>
            <li><h4><%= link_to book.title, work_path(book) %>
              <small>by: <%= @user %><small>
                <p># Votes</p>
              </h4></li>
              <% end %>
            </ul>
          </section>

          <section class="top-ten columns large-4 small-12">
            <h3>Top Albums</h3>
            <ul>
              <% @albums[0..10].each do |album| %>
              <li><h4><%= link_to album.title, work_path(album) %>
                <small>by: <%= @user %> <small>
                  <p># Votes</p>
                </h4></li>
                <% end %>
              </ul>
            </section>

          </main>
