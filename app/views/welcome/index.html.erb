<header>
  <h1>Media Ranker Ranking the Best of Everything</h1>
</header>

<nav>
<p>Logged in as </p>
</nav>

<main>

<section>
<h1>Media Spotlight:</h1>

</section>

<section>
<h2>Top Movies</h2>
<ul>
  <% @movies.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work.id)%>
    </li>
  <% end %>
</ul>
</section>

<section>
<h2>Top Books</h2>
<ul>
  <% @books.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work.id)%>
    </li>
  <% end %>
</ul>
<p><%= link_to "View More Books", books_path, class: "button" %></p>
</section>

<section>
<h2>Top Albums</h2>
<ul>
  <% @albums.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work.id)%>
    </li>
  <% end %>
</ul>
</section>

</main>
