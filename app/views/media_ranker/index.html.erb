<section id="content">

  <h2>Media Spotlight:</h2>
  <p><%= link_to @rand_work.title, @rand_work_path %></p>
  <p>by <%= @rand_work.creator %></p>
  <p><%= @rand_work.votes.length %> votes</p>
  <p><%= @rand_work.description %></p>


  <h2>Top albums:</h2>

  <table>
    <% @albums.each do | album | %>
    <tr>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td>by <%= album.creator %></td>
    </tr>
    <% end %>


  </table>
  <section>
    <p>
      <%=link_to "View more albums", albums_path %>
    </p>
  </section>

  <h2>Top movies:</h2>

  <table>
    <% @books.each do | book | %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td>by <%= book.creator %></td>
    </tr>
    <% end %>

  </table>
  <section>
    <p>
      <%=link_to "View more books", books_path %>
    </p>
  </section>

  <h2>Top movies:</h2>

  <table>
    <% @movies.each do | movie | %>
    <tr>
      <td><%= link_to movie.title, movie_path(movie.id) %></td>
      <td>by <%= movie.creator %></td>
    </tr>
    <% end %>

  </table>
  <section>
    <p>
      <%=link_to "View more movies", movies_path %>
    </p>
  </section>

</section>
