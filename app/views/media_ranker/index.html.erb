<section id="content">

  <h2>Media Spotlight:</h2>
  <p>
    Amazing people. Amazing things.
  </p>


  <h2>Top albums:</h2>

  <table>
    <% @albums.each do | album | %>
    <tr>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td>by <%= album.creator %></td>
    </tr>
    <% end %>


  </table>
  <section>
    <p>
      <%=link_to "View more albums", albums_path %>
    </p>
  </section>

  <h2>Top books:</h2>

  <table>
    <% @books.each do | book | %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td>by <%= book.creator %></td>
    </tr>
    <% end %>

  </table>
  <section>
    <p>
      <%=link_to "View more books", books_path %>
    </p>
  </section>

  <h2>Top movies:</h2>

  <table>
  

  </table>
  <section>
    <p>
      <%=link_to "View more movies", movies_path %>
    </p>
  </section>

</section>
