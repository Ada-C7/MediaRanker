<h2 class ="index_page"> Media Spotlight:
  <% spotlight = Item.spotlight %>
  <%= link_to spotlight.title, item_path(spotlight) %> by <%=spotlight.creator%>

</h2>



<% ['movie', 'book', 'album'].each do |category| %>

<section class = "category_list">
  <h2><%= "Top #{category.capitalize}s"%></h2>
  <ul>
    <%  category_list = Item.by_category(category)%>
    <% category_list.each do |item| %>
    <li><h3><%= link_to item.title, item_path(item) %></h3> </li>
    <% end %>
  </ul>
  <%= link_to "View more #{category}s", category_index_path(category) %>

</section>
<% end %>
