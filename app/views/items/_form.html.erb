<section>
  <%= form_for @item do |f| %>
    <%= f.hidden_field :category, :value => @item.category %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit value: "#{submit_text} item" %>
  <% end %>
</section>
