<section>
  <%= form_for @item do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>
    
    <%= f.hidden_field :category %>

    <%= f.submit text %>

  <% end %>
</section>
