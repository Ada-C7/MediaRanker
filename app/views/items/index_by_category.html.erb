<h3><%= "#{params[:category].capitalize} List" %> </h3>

<% @items_of_category.each  %>



<ol>
  <% @items_of_category.each do |item| %>

  <li>
    <h3><%= link_to item.title, item_path(item) %> </h3>
  </li>
  <% end %>
</ol>

<%= button_to "View all media", items_path,
method: :get %>

<%= button_to "Add a new #{params[:category].singularize}", new_item_by_category_path(params[:category]),
method: :get %>
