<h1><%= @item[:title] %></h1>
<h2>Created by: <%= @item[:creator] %></h2>
<h2>Published: <%= @item[:publication_year] %></h2>
<h2><%= @item[:description] %></h2>
<h2><%= @item.votes.count %></h2>

<%= button_to 'vote', upvote_item_path(@item), :class => "button", method: :post %>
<%= link_to "Back to #{@item.category}s", category_path(@item.category), :class => "button" %>
<%= link_to 'Back to homepage', root_path, :class => "button" %>
<%= link_to "Edit #{@item.category}", edit_item_path, :class => "button" %>
<%= link_to "Delete #{@item.category}", item_path(@item), :class => "button", data: {method: :delete, confirm: "Are you sure you want to delete this #{@item.category}?"} %>
