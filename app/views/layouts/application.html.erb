<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="page-header row">
      <h2 class="columns large-9 small-12">
        <%= link_to "Media Ranker", works_path %>
        <small>Ranking the best of everything</small>
      </h2>


      <div class="columns large-3 small-12">

        <% if session[:user_id] %>
          <p class="text-right">Logged in as
          <%= link_to User.find_by_id(session[:user_id]).name, user_path(session[:user_id]) %></p>
          <%= link_to "Log Out", logout_path, method: :delete, class: "button float-right" %>
        <% else %>
          <p class="text-right"> Not logged in</p>
          <%= link_to "Log In", login_path, class: "button float-right" %>
        <% end %>
      </div>
    </header>

    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="<%=name%>">
          <%=message%>
        </div>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
