<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>

        <head>
          <%= image_tag("owl.jpg", alt: "drawing of owl holding a book", height: "300px") %>
          <h2><a href="/"> Media Ranker </a>Ranking the Best of Everything</h2>

        </head>
        <% if session[:user_id] %>
          <%= link_to "Logout", logout_path, class: "button", method: :delete %>
          <% else %>
          <%= link_to "Login", login_path, class: "button" %>
          <% end %>
    </nav>

    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>


    <%= yield %>
  </body>
</html>
