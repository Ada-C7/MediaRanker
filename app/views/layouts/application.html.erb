<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <%= image_tag("owl.jpg", :alt => "owl cartoon") %>
    <h2>
      <%= link_to 'Media Ranker', root_path %>
      <small>Ranking the Best of Everything</small>
    </h2>
    <nav>
      <section>
        <% if session[:user_id] %>
          <p>Logged in as <%= link_to "#{User.find_by_id(session[:user_id]).name}", user_path(session[:user_id]) %></p>
          <%= link_to 'Log Out', logout_path, method: :delete, class: :button %>
        <% else %>
          <p>Not logged in</p>
          <%= link_to 'Log In', login_path, class: :button %>
        <% end %>
      </section>
    </nav>
    </header>
    <section class="flash">
    <% flash.each do |name, message| %>
      <h3 class="<%= name %>"><%= message %></h3>
    <% end %>
    </section>

    <%= yield %>
  </body>
</html>
