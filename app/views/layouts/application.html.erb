<!DOCTYPE html>
<html>
  <head>
    <title>DankRank</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav>
      <img src="/assets/owl.jpg" alt='Dank Owl'>
        <h1><%= link_to 'DankRank', home_path %></h1>
        <h2> Rank the Best Dank Everything</h2>

        <section>
      <% if session[:user_id] %>
        Logged in as <%= link_to "#{User.find_by(id: session[:user_id]).name}", user_path(session[:user_id])%>
        <%= button_to "Logout", logout_path, method: :delete%>
        <%else%>
        Not Logged in
        <%= button_to "Login", login_path%>
        <%end%>
      </section>
    </nav>
  </header>

    <section class='flash'>
      <% flash.each do |name, message| %>
      <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>

    <%= yield %>
  </body>
</html>
