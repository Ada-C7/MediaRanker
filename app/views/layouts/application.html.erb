<!DOCTYPE html>
<html>
<head>
  <title>MediaRanker</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>



  <nav>
    <%= image_tag "owl.jpg", alt:"Owl reading a book", class:"owl_img"%>
    <h1> <%= link_to "Media Ranker", items_path %> </h1>
    <h2> Ranking the Best of Everything </h2>

    <ul class= "login">
      <% if session[:user_id] %>
      <li>Logged in as
        <%=link_to current_user.username, user_path(current_user), method: :get%>
      </li>
      <% else %>
      <li>Not logged in</li>
      <% end %>


      <% if session[:user_id] %>
      <li><%= button_to "Logout", logout_path, method: :delete %></li>
      <% else %>
      <li><%= button_to "Login", login_path, method: :get%></li>
      <% end %>
    </ul>


  </nav>

  <section class="flash">
    <% flash.each do |name, message| %>
    <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>


  <%= yield %>
</body>
</html>
