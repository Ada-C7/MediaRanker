<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="page-header row">
      <h2 class="columns large-9 small-12"><%= image_tag("owl.jpg") %><%= link_to "Media Ranker", root_path %><small> Ranking the Best of Everything</small></h2>
      <% if !session[:user] %>
        <p class="text-right"> Not logged in</p>
        <%= link_to "Login", login_path, :class => "button float-right" %>
      <% else %>
        <p class="text-right">You are logged in as <%= link_to session[:user_name], user_path(session[:user]) %></p>
        <%= link_to "Logout", login_path, method: :delete, :class => "button float-right" %>
      <% end %>
    </header>
    <section class="row status success">
      <% flash.each do |name, message| %>
      <div class="<%= name %>"><h3><%= message %></h3></div>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
