
<section id ="spotlight">
  <h3>Spotlight:
   <%=link_to @spotlight_work.title, work_path(@spotlight_work.id)%>, votes:  <%=@spotlight_work.votes_count%>
 </h3>
 </section>

<main class = "row">
  <section class = "small-12 large-4 columns">

    <h2> Top albums: </h2>
    <ul>
      <%@top_albums.each do |item|%>
      <%= render partial: 'work_summary', locals:{item:item}%>
      <%end%>
    </ul>
    <%=link_to "View more albums", albums_path %>
  </section>
  <section class = "small-12 large-4 columns">
    <h2> Top books: </h2>
    <ul>
      <%@top_books.each do |item|%>
      <%= render partial: 'work_summary', locals:{item:item}%>
      <%end%>
    </ul>
    <%=link_to "View more books", books_path %>

  </section>
  <section class = "small-12 large-4 columns">
    <h2> Top movies: </h2>
    <ul>
      <%@top_movies.each do |item|%>
      <%= render partial: 'work_summary', locals:{item:item}%>
      <%end%>
    </ul>
    <%=link_to "View more movies", movies_path %>
  </section>
</main>
