<h3>List of <%= @category.pluralize.capitalize %></h3>

<section class="media-table">
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to work.title, "/#{@category.pluralize}/#{work.id}" %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= link_to "Upvote", "/#{@category.pluralize}/#{work.id}/upvote", method: :patch %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "View all media", root_path %>
</section>
