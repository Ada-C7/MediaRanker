<h3>List of <%= @category.pluralize.capitalize %></h3>

<section class="media-table">
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <tr>
          <td><%= work.vote_total %></td>
          <td><%= link_to work.title, work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= link_to "Upvote", vote_path(work.id, 1), method: :patch, class: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "View all media", root_path, class: "button" %>
  <%= link_to "Add a new #{@category}", new_work_path(@category), class: "button" %>
</section>
