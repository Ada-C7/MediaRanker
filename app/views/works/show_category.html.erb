<main class="row">
  <h3>List of <%=@category%></h3>
  <section class="media-table">

    <table>
      <thead>
        <tr>
          <th width="80">
            Votes
          </th>
          <th>
            Title
          </th>
          <th>
            Created By
          </th>
          <th width="100">
            Published
          </td>
          <th width="100">
            Upvote
          </th>
        </tr>
      </thead>


      <tbody>
        <% if !@categorized_works.empty? %>
        <% @categorized_works.each do |work| %>

        <tr>
          <td>
            <%= work.votes.count %>
          </td>
          <td>
            <%= link_to work.title, work_path(work.id), method: :get %>
          </td>
          <td>
            <%= work.created_by %>
          </td>
          <td>
            <%= work.year_published %>
          </td>
          <td>
            <%= link_to "Upvote", upvote_path(work.id), method: :post, class: "button upvote" %>
          </td>
          <% end %>
        </tr>
      </tbody>
      <%end%>
    </table>
  </section>
  <section>


    <%= link_to "View all media", root_path, method: :get, class: "button" %>
    <%= link_to "Add a new #{@category}", new_works_path(@category), method: :get, class:"button" %>
    <%# problem here if there is no media of a given category %>

  </section>
</main>
