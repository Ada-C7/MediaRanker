<h3>List of <%= params[:category].pluralize.capitalize %></h3>
<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td>
          <%= work.votes.size %>
        </td>
        <td>
          <%= link_to work.title, work_path(work.id) %>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.year_published %>
        </td>
        <td>
          <%= link_to "Upvote", upvote_path(work.id), method: :patch %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "View All Media", root_path %></p>
<p><%= link_to "Add New " + params[:category].singularize.capitalize, new_work_path %></p>
