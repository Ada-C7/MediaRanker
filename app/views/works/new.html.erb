<h1>Add a new <%= params[:category].singularize %></h1>

<%= form_for @work, url: category_path(params[:category]) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>

  <%= f.submit %>
<% end %>
