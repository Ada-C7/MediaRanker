<section class="error-messages">
  <% if !instance.nil? && instance.errors.messages.length > 0 %>
    <ul>
      <% instance.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li><%= field %>: <%= problem %></li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</section>
