<ul>
  <% @work.errors.each do |field, msg| %>
    <li>
      <%= field %> <%= msg %>
    </li>
  <% end %>
</ul>

<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :year_published %>
  <%= f.text_field :year_published %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :category, value: @category %>

  <%= f.submit action_name %>
<% end %>
