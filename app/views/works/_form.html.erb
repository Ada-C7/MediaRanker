<section class="work-form">

  <%= form_for @work do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :creator %>
        <%= f.text_field :creator %>

        <%= f.label "Publication year" %>
        <%= f.text_field :published %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.hidden_field :category, value: params[:category] %>

        <%= submit_tag "Save Work", class: "button" %>

    <% end %>

</section>
