<% if @work.errors.messages.length > 0 %>
<section class="errors">
  <h2> Something went wrong! </h2>
  <ul>
    <% @work.errors.messages.each do |field, problem_list| %>
    <% problem_list.each do |problem| %>
    <li>
      <%= field %>:
      <%= problem %>
    </li>
    <% end %>
    <% end %>
  </ul>
</section>
<% end %>

<%= form_for @work do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :created_by %>
<%= f.text_field :created_by %>
<%= f.label :publication_year %>
<%= f.number_field :publication_year %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit %>
<% end %>
