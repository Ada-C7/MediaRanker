<section class="work-form">

  <%= form_for @work do |f| %>

    <ul>

      <li>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>

      <li>
        <%= f.label :creator %>
        <%= f.text_field :creator %>
      </li>

      <li>
        <%= f.label "Publication year" %>
        <%= f.text_field :published %>
      </li>

      <li>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </li>

        <%= f.hidden_field :category, value: params[:category] %>

      <li>
        <%= f.submit %>
      </li>

    </ul>
    <% end %>

</section>
