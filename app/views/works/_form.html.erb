<ul class="errors">
  <% if @work.errors.any? %>
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
      <% end %>
  <% end %>
</ul>


<%= form_for @work, method: form_method do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label 'Publication Year' %>
  <%= f.text_field :year_published %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>
  <%= hidden_field(:work, :category, :value => params[:category]) %>

  <%= f.submit action_name%>

<% end %>
