

<% if @work.errors.messages.length > 0 %>
<section class="errors">
  <h2>Something went wrong!</h2>
  <ul>
    <% @work.errors.messages.each do |field, problem_list| %>
      <% problem_list.each do |problem| %>
        <li>
          <strong><%= field %>:</strong>
          <%= problem %>
        </li>
        <% end %>
    <% end %>
  </ul>
</section>
<% end %>




<%= form_for @work do |f| %>

<div>
  <%= f.label :title, class: "label" %>
  <%= f.text_field :title, class: "field"%>
</div>
<div>
  <%= f.label :creator, class: "label"%>
  <%= f.text_field :creator, class: "field"%>
</div>
<div>
  <%= f.label :publication_year, class: "label"%>
  <%= f.number_field :publication_year, class: "field"%>
</div>
<div>
  <%= f.label :description, class: "label"%>
  <%= f.text_field :description, class: "field"%>
</div>
<div id = "_form_section_submit">
  <%= f.submit value: "SAVE"%>
</div>
<% end %>
