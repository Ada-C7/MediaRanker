<ul>
  <% @work.errors.each do |field, msg| %>
  <li>
    <%= field %> <%= msg %>
  </li>
    <% end %>

</ul>


<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publish_year %>
  <%= f.text_field :publish_year %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name %>
<% end %>
