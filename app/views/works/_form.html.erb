<section>
  <%= form_for @work do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.number_field :publication_year, max: Time.now.year, min: 1400%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :category %>
    <%#= f.text_field :category %>
    <%= f.select :category, [ 'book', 'movie', 'album' ], prompt: 'Select One' %>

    <%= f.submit value: "#{action_name}", class: "button" %>

  <% end %>
</section>

<% if @work.errors.messages.length > 0 %>
  <section class="errors">
    <ul>
      <% @work.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <strong><%= field %>:</strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
