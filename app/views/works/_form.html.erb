<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :year_published %>
  <%= f.select :year_published, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :category, value: params[:category] %>

  <%= f.submit action_name %>
<% end %>
