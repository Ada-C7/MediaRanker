<section id="content">

  <!-- this is a placeholder -->
  <h2><%= view_name %></h2>

  <table>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Publication Year</th>
      <th>Description</th>
    </tr>
    <% works.each do | work | %>
    <tr>
      <td><%= link_to work.title, "/#{work.category}s/#{ work.id }" %></td>
      <td><%= work.creator %></td>
      <td><%= work.pub_year %></td>
      <td><%= work.description %></td>
    </tr>
    <% end %>
  </table>

  <%= link_to "View all media", works_path, class: :button %>
  <%= link_to "Add new", add_new_path, class: :button %>
</section>
