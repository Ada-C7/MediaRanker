<header>
  <%= render "shared/header" %>
</header>

<main>
  <section>
    <h2>Movies</h2>
    <ul>
    <% @movies.each do |movie| %>
      <li><%= movie.title %></li>
    <% end %>
    </ul>
  </section>

  <nav>
    <%= button_to "Back All Media", homepage_path, :class => "button", :method => :get %>
    <%= button_to "Add Movie", new_movie_path, :class => "button", :method => :get %>
  </nav>

</main>
