<ul class="edit-work">
  <%= form_for @work, method: form_method do |f| %>
  <%= f.hidden_field :category, :value => @work.category %>
  <li><%= f.label :title %> <%= f.text_field :title %></li>
  <li><%= f.label :creator %> <%= f.text_field :creator %></li>
  <li><%= f.label :publication_year %> <%= f.text_field :publication_year %></li>
  <li><%= f.label :description %> <%= f.text_field :description %></li>
  <li><%= f.submit "Update #{@work.category.capitalize}", class:"button" %></li>
  <% end %>
</ul>
