<%= @work.title %></br>
Created by: <%= @work.created_by %></br>
Published <%= @work.year_published %></br>
<%= @work.description %></br>

<%= button_to "Back to #{@work.category.capitalize} List", category_path(@work.category.pluralize), method: :get %>

<%= button_to "Edit",edit_work_path(@work.id), method: :get %>

<%= button_to "Upvote",upvote_path(@work.id), method: :post %>


<%= button_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure you want to delete this work?"} %>
