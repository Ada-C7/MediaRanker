<section id="show-data">
  <h2><%= @result_work.title %></h2>
  <p>Created by: <%= @result_work.creator %></p>
  <p>Published: <%= @result_work.year %></p>
  <p><%= @result_work.description %></p>
</section>

<section id="show-votes">
  <h2><%= @result_work.votes.length %> votes for this <%= @result_work.category.capitalize %></h2>
  <table>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    <% @result_work.votes.each do | vote | %>
    <tr>
      <td><%= link_to vote.user.name, user_path(vote.user_id) %></td>
      <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
      <td>
    </tr>
    <% end %>
  </table>
</section>
<p></p>

<p>(link to category list)</p>
<%= link_to "Back to " %>
<%= link_to "Edit", edit_work_path(@result_work.id) %>
<%= link_to "Upvote", upvote_path, method: :post %>
<%= link_to "Delete", work_path(@result_work.id),
data: { confirm: "Are you sure you want to delete this?" },
method: :delete %>
