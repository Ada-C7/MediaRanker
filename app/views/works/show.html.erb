<section id="content">
  <h2>Albums!</h2>

  <table>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Publication Year</th>
      <th>Description</th>
    </tr>
    <% @works.each do | work | %>
    <tr>
      <td><%= work.title %></td>
      <td><%= work.creator %></td>
      <td><%= work.pub_year %></td>
      <td><%= work.description %></td>
    </tr>
    <% end %>
  </table>
</section>
