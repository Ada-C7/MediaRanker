<h1><%= @work.title%></h1>

<div>Created by: <%= @work.creator %></div>
<div>Published: <%= @work.published_year%></div>
<div>Description: <%= @work.description%></div>
<div> <%= @work.votes.count%> votes from:
  <ul>
  <% @work.users.each do |user|%>
  <li> <%= user.name%></li>
  <%end%>
</ul>
</div>

<%= button_to @work.votes.select { |vote| vote[:user_id] == session[:user_id] }.empty? ? 'Upvote' : 'Remove Vote', upvote_path(@work.id) %>


<%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure to delete the #{@work.category} #{@work.title}?"}%>
<%= link_to 'Edit', edit_work_path(@work.id) %>
<%= link_to "View All #{@work.category.capitalize}s", send("#{@work.category}s_path") %>
