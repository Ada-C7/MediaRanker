<section class="row">
  <section id="show-data" class="media-details columns large-6 small-12">
    <h3><%= @result_work.title %></h3>
    <p>Created by: <%= @result_work.creator %></p>
    <p>Published: <%= @result_work.year %></p>
    <p><%= @result_work.description %></p>
    <%= link_to "Back to #{ @result_work.category.capitalize }s", root_path, class: :button %>
    <%= link_to "Edit", edit_work_path(@result_work.id, :category => @result_work.category), class: :button %>
    <%= link_to "Upvote", upvote_path, method: :post, class: :button %>
    <%= link_to "Delete", work_path(@result_work.id),
    data: { confirm: "Are you sure you want to delete this?" },
    method: :delete, :class => "button alert" %>
  </section>

  <section id="show-votes" class="voting-users columns large-6 small-12">
    <h3><%= @result_work.votes.length %> votes for this <%= @result_work.category.capitalize %></h3>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @result_work.votes.each do | vote | %>
        <tr>
          <td><%= link_to vote.user.name, user_path(vote.user_id) %></td>
          <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <p></p>

</section>
