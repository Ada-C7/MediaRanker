<h1>Work Details Page</h1>

<h3><%= @result_work.title %></h3>
<p>Created by: <%= @result_work.creator %></p>
<p>Published: <%= @result_work.publication_year %></p>
<p><%= @result_work.description %></p>

<h3><%= @result_work.votes.count%> Votes for this Book</h3>


<% if @result_work.category == "book" %>
<%= link_to "Back to #{@result_work.category} list", books_path %>
<% elsif @result_work.category == "album" %>
<%= link_to "Back to #{@result_work.category} list", albums_path %>
<% else %>
<%= link_to "Back to #{@result_work.category} list", movies_path %>
<% end %>

<%= link_to "Edit", edit_work_path(@result_work.id) %>

<%= link_to "Upvote", upvote_path(@result_work.id), method: :post %>
<!-- redirects to the wrong path atm!!! -->
<%= link_to "Delete", work_path(@result_work.id),
    data: {confirm: "Are you sure?"},
    method: :delete %>
