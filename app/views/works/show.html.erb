<div class = "row">
  <section class = "large-6 columns">
    <h1> <%=@work.title %> </h1>
    <p>
      Created by: <%=@work.creator %>
    </p>
    <p>
      Published: <%=@work.publication_year %>
    </p>
    <p>
      <%=@work.description %>
    </p>
    <p>
      <%= link_to "Back", @back_url%>
      <%= link_to "Edit", edit_work_path%>
      <%= link_to "Delete", work_path,
      data: {method: :delete, confirm: "Are you sure you want to delete this work from the list?"}%>
    </p>

  </section>

  <section class = "large-6 columns">
    <h1>
      <%= @work.votes.count%> Votes for this <%= session[:category]%>
    </h1>

    <section class="table_scroll">
      <table>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
        <% @work.votes.each do |vote| %>
        <tr>
          <td><%= vote.user.name %></td>
          <td><%= vote.created_at%></td>
        </tr>
        <% end %>
      </table>
    </section>
  </section>
</div>
