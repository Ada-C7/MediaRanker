
<article>
  <%= @work.title %>
  <p>Created by: <%= @work.creator %> </p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>
  <%= link_to "Back to #{@work.category} list", work_path(@work.id) %>

</article>

<article>
  <h3> <%=@work.votes.count %> Vote/s for this <%= @work.category.capitalize %></h3>
  <table>
    <thead>
      <th>User</th>
      <th>Date</th>
    </head>
    <tbody>
    <% @work.votes.each do |vote| %>
      <tr>
        <td> <%= link_to vote.user.name, user_path(vote.user.id) %></td>
          <td><%= vote.created_at %></td>
      </tr>
    <% end %>
      </tbody>
  </table>
</article>
