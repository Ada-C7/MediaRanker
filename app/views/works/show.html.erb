<h1>Work Detail Page</h1>

<%= @work.title %></br>
Created by: <%= @work.creator %></br>
Published: <%= @work.publication_year %></br>
Description: <%= @work.description %></br>
<%= @work.votes.count %> votes for this <%= @work.category %></br>

<nav>
<%= link_to "Back to movie list", works_path %>
<%= link_to "Edit", edit_work_path%>
<%= link_to "Upvote", works_path(work.id), method: :post %>
<%= link_to "Delete", work_path,method: :delete, data: {confirm: "Are you sure you want to delete this"}%>

<!-- <li><%#= button_to "Delete", book_path(book.id), method: :delete, data: {confirm: "Are you sure you want to delete this"} %></li> -->

</nav>
<table>
  <tr>
    <th>
      User
    </th>
    <th>
      Date
    </th>
  </tr>
<% @work.votes.each do |vote| %>
<tr>

<td>
<%= User.find(vote.user_id).name %>
</td>
<td>
<%= vote.created_at.strftime("%b %d, %Y") %>
</td>
</tr>
<% end %>
</table>
