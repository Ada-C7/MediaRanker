<h2> <%= link_to @work.title %> </h2>
<h2>Votes: <%= @work.votes.size %> </h2>
<h2> <%= @work.creator %> </h2>
<h2> <%= @work.pub_yr %> </h2>
<h2> <%= @work.desc %> </h2>

<% if @work.category == "book" %>
  <%= link_to "Back to book list", books_path %>
<% elsif @work.category == "album" %>
  <%= link_to "Back to album list", albums_path %>
<% elsif @work.category == "movie" %>
  <%= link_to "Back to movies list", movies_path %>
<% end %>


<%= link_to "Edit", edit_work_path(@work.id) %>

<%= link_to "Upvote", new_vote_path, method: :post %>

<%= link_to "Delete", work_path(@work.id),
  data: { confirm: "Are you sure you want to delete this work?" },
  method: :delete
%>

<h2>VOTES</h2>
<table>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>
  <% @work.votes.each do |vote| %>
  <tr>
    <td> <%= link_to vote.user.name, user_path(vote.user_id) %> </td>
    <td> <%= vote.created_at %> </td>

  </tr>
  <% end %>
</table>
