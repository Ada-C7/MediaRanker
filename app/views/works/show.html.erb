<main class="row">
  <article class="media-details columns large-6 small-12">
    <h3><%= @work.title %></h3>
    <p>Created by:<%= @work.creator %></p>
    <p>Published:<%= @work.pub_year %></p>
    <p><%= @work.description %></p>
  </article>
  <section>
    <!--TODO: fix this link -->
    <%= link_to "Back to #{@work.category} list", books_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "button" %>
    <!-- Upvote -->
    <%= link_to "Delete", work_path(@work.id), data: { confirm: "Are you sure?"}, method: :delete %>
  </section>

</main>
