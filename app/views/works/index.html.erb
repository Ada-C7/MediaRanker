<section>
  <div class="columns large-3 medium-3 small-12">
    <h2>Top Movies</h2>
    <% @works.each do |work| %>
    <% if work.category == "movie" %>
    <ul>
      <li>
        <p><%= link_to work.title, work_path(work.id) %></p>
        <p><%= work.votes.count %> Votes</p>
      </li>
    </ul>
    <% end %>
    <% end %>
    <p><%= link_to "View all the movies", movies_path %></p>
  </div>

  <div class="columns large-3 small-10">
    <h2>Top Books</h2>
    <% @works.each do |work| %>
