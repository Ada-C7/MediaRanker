<h4>Something</h4>
<table>
  <tr>
    <th>Votes:</th>
    <th>Title:</th>
    <th>Created By:</th>
    <th>Published:</th>
    <th>Upvotes:</th>
  </tr>
  <% @works.each do |work| %>
    <tr>
      <td><%= work.votes.count %></td>
      <td><%= link_to "#{work.title}", work_path(work.id) %></td>
      <td><%= "#{work.creator}" %></td>
      <td><%= "#{work.publication_year}" %></td>
      <td><%= button_to "Vote", vote_work_path(work.id), :class => "button", method: :post %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Create new", new_work_path(params[:category]) %>
