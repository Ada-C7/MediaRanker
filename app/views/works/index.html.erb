<section class="row spotlight">
  <div>
    <% spotlight = @works.sample %>
    <h3> Media Spotlight: <%= spotlight.name %> </h3>
    <p>
      X votes - "<%= spotlight.desc %>"
    </p>
  </div>
</section>

  <article class="top-ten columns large-4 small-12">
    <h3>Top Movies</h3>
      <% @movies.each do |movie| %>
        <ul>
          <li>
            <%= link_to movie.name, work_path(movie.id) %> by <%= movie.created_by %>
          </li>
          <li>
            X votes
          </li>
        </ul>
      <% end %>
    <%= link_to "View More Movies", '/movies' %>
  </article>
