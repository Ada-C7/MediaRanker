<main>
  <section>
    <h2>Media Spotlight</h2>
  </section>
  <section class="top-ten columns large-4 small-12">
    <h3>Movies</h3>

    <% @works.where(category: "movie").each do |movie| %>
      <h3><%= link_to movie.title, work_path(movie.id) %> by <%= movie.creator %></h3>
      <p><%= movie.votes.count %> votes</p>
    <% end %>

    <%= link_to "View more Movies", movies_path %>
  </section>

  <section class="top-ten columns large-4 small-12">
    <h3>Books</h3>

    <% @works.where(category: "book").each do |book| %>
      <h3><%= link_to book.title, work_path(book.id) %> by <%= book.creator %></h3>
      <p><%= book.votes.count %> votes</p>
    <% end %>

    <%= link_to "View more Books", books_path %>
  </section>

  <section class="top-ten columns large-4 small-12">
    <h3>Albums</h3>

    <% @works.where(category: "album").each do |album| %>
      <h3><%= link_to album.title, work_path(album.id) %> by <%= album.creator %></h3>
      <p><%= album.votes.count %> votes</p>
    <% end %>

    <%= link_to "View more Albums", albums_path %>
  </section>
</main>
