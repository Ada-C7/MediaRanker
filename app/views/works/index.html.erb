<section class="row spotlight">
  <div>
    <% if @top_work != nil %>
      <h3>Media Spotlight: <%=link_to @top_work.title, work_path(@top_work.id) %> by <%= @top_work.creator %> </h3>
      <p>
        <%= @top_work.votes.length %> votes <%= @top_work.desc %>
      </p>
    <% end %>
  </div>
</section>

<h2>Books</h2>
<% @books[0..9].each do |book| %>
  <h3> <%= link_to book.title, work_path(book.id) %> by <%= book.creator %> </h3>
  <h4> <%= book.votes.length %> votes </h4>
<% end %>
<%= link_to "More Books", books_path %>

<h2>Albums</h2>
<% @albums[0..9].each do |album| %>
  <h3> <%= link_to album.title, work_path(album.id) %> by <%= album.creator %> </h3>
  <h4> <%= album.votes.length %> votes </h4>
<% end %>
<%= link_to "More Albums", albums_path %>

<h2>Movies</h2>
<% @movies[0..9].each do |movie| %>
  <h3> <%= link_to movie.title, work_path(movie.id) %> by <%= movie.creator %> </h3>
  <h4> <%= movie.votes.length %> votes </h4>
<% end %>
<%= link_to "More Movies", movies_path %>
