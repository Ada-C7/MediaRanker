<section id="content">
  <h2>All Works!</h2>

  <table>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Creator</th>
      <th>Publication Year</th>
      <th>Description</th>
    </tr>
    <% @works.each do | work | %>
    <tr>
      <td><%= work.category %></td>
      <td><%= link_to work.title, "/#{work.category}s/#{ work.id }" %></td>
      <td><%= work.creator %></td>
      <td><%= work.pub_year %></td>
      <td><%= work.description %></td>
    </tr>
    <% end %>
  </table>

</section>
