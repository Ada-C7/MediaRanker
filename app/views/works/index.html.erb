<% if @works.empty? %>
<h1> There are no <%= request.path[1..-1].capitalize %>! </h1>
<% else %>
<h1>All <%= @works.sample.category.capitalize%>s</h1>

<% @works.each do |work| %>
<div>Votes: <%= work.votes.count%></div>
<div><%= link_to "Title: #{work.title}", work_path(work.id)%></div>
<div>Created by: <%= work.creator %></div>
<div>Published: <%= work.published_year%></div>
<div>Description: <%= work.description%></div>
<div><%= button_to 'Upvote', upvote_path(work.id) %></div>
<% end %>
<%end%>

<%= link_to "View All Media", home_path %>
<%= link_to "Add a New Media", new_work_path%>
