<ul>
<% @books.each do |book| %>
<li> <%= link_to book.title, work_path(book.id) %> <%= book.votes.count %> </li>
<% end %>
</ul>

<h2>Top Albums</h2>

<ul>

<% @albums.each do |album| %>
<li> <%= link_to album.title, work_path(album.id)
 %> <%= album.votes.count %> </li>
<% end %>
</ul>
