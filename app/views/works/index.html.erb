<h2>Media Ranker</h2>
<h3>Ranking the Best of Everything</h3>

<h4>Top Movies</h4>
<ul><% @works.each do |work| %>
  <% if work.category == "movie" %>
  <li><%= link_to work.title, movie_path(work.id) %> by <%= work.created_by %></li>
    <% end %>
<% end %></ul>

<h4>Top Albums</h4>
<ul><% @works.each do |work| %>
  <% if work.category == "album" %>
  <li><%= link_to work.title, album_path(work.id)%> by <%= work.created_by %></li>
  <% end %>
<% end %></ul>

<h4>Top Books</h4>
<ul><% @works.each do |work| %>
  <% if work.category == "book" %>
  <li><%= link_to work.title, book_path(work.id) %> by <%= work.created_by %></li>
    <% end %>
<% end %></ul>
