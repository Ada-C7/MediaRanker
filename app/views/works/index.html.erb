<h1>Media</h1>


<% categories.each do |category, works| %>
  <h2>Top <%= category.pluralize %></h2>
    <% works[0..9].each do |work| %>
      <h3><%= link_to work[:title], work_path(work.id) %> by <%= work[:creator] %></h3>
    <% end %>
    <h3><%= link_to "add new #{category}", new_work_path %></h3>
    <h3><%= link_to "see all #{category.pluralize(2)}", category_path(category.pluralize(2)) %></h3>
<% end %>
