<section id="content">
  <h2>All Trips!</h2>

  <table>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Creator</th>
      <th>Publication Year</th>
      <th>Description</th>
    </tr>
    <% @works.each do | work | %>
    <tr>
      <td><%= work.category, work_path(work.work_id) %></td>
      <td><%= work.title, work_path(work.work_id) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication %></td>
      <td>$<%= work.description %></td>
    </tr>
    <% end %>
  </table>
</section>
