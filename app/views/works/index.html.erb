
<h4>Media Spotlight: <%=Work.top_votes.title%></h4>
<p>
  <%= Work.top_votes.votes.count %> votes - <%= Work.top_votes.description %>
</p>

<h4>Top Movies</h4>
<!-- could have put this in a method, not sure where -->
<% top_movies = @movies.sort { |a, b| a.votes.count <=> b.votes.count}.take(10).reverse %>
<% top_books = @books.sort { |a, b| a.votes.count <=> b.votes.count}.take(10).reverse %>
<% top_albums = @albums.sort { |a, b| a.votes.count <=> b.votes.count}.take(10).reverse %>


<p>
  <% top_movies.each do |a| %>
  <ul>
    <%= link_to a.title, work_path(a.id) %> by <%= a.creator %>
  </ul>
  <ul>
    <%= a.votes.count %> votes
  </ul>

  <% end %>
  <%= link_to "View more movies", movies_path %>
</p>

<h4>Top Books</h4>
<p>
  <% top_books.each do |a| %>
  <ul>
    <%= link_to a.title, work_path(a.id) %> by <%= a.creator %>
  </ul>
  <ul>
    <%= a.votes.count %> votes
  </ul>
  <% end %>
  <%= link_to "View more books", books_path %>

</p>

<h4>Top Albums</h4>
<p>
  <% top_albums.each do |a| %>
  <ul>
    <%= link_to a.title, work_path(a.id) %> by <%= a.creator %>
  </ul>
  <ul>
    <%= a.votes.count %> votes
  </ul>
  <% end %>
  <%= link_to "View more albums", albums_path %>

</p>
