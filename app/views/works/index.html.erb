<ul>

<% @movies.each do |movie| %>
<%# movie.sort_by { |post| post.votes.size }.reverse %>
<li>

  <%= link_to movie.title, work_path(movie.id) %> <%= movie.votes.count %> </li>
<% end %>
</ul>


