<h3><%= "List of #{@category.capitalize}" %></h3>

<section>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created by</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to work.title, work_path(work) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= link_to "View all media", home_path, class: "button" %>
<%= link_to "Add a new #{@category.singularize }", new_work_path(@category),
  class: "button" %>
