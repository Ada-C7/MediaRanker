    <ul>
      <li>
        <p><%= link_to work.title, work_path(work.id) %></p>
        <p><%= work.votes.count %> Votes</p>
      </li>
    </ul>
    <% end %>
    <% end %>
    <p><%= link_to "View all the albums", albums_path %></p>
  </div>
</section>
