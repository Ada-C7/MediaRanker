<h3>Media Spotlight: <%#= link_to @works.sample.title, work_path(@work.id) %> </h3>

<section>
  <h3>Top Movies</h3>

  <% movies = @works.where(category: 'movie') %>
  <% if movies.length > 10 %>
    <% movies_ten = movies[0..9] %>
  <% else %>
    <% movies_ten = movies %>
  <% end %>
  <ul>
  <% movies_ten.each do |movie| %>
    <li>
      <h4>
      <%= link_to movie.title, work_path(movie.id) %> by <small><%= movie.creator %></small>
      </h4>
      <p><%= movie.votes.count %> votes</p>
    </li>
  <% end %>
  </ul>
  <%= link_to "View More Movies", movies_path %>
</section>

