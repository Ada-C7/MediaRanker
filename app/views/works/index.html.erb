
<div class = "row div_head">
  <%if @works.length > 0%>
    <h3 class = "large-12 columns">Media Spotlight: <%=@works.first.title%> <small>by <%=@works.first.creator%></small></h3>
    <p class = "large-12 columns">
    <%=@works.first.votes.count%> votes
    </p>
  <% else %>
    <h3 class = "large-12 columns">Media database is empty.</h3>
  <% end %>
</div>

<div class = "row">
  <section class = "large-4 columns">
    <h3> Top Movies</h3>
    <%@movies.each do |movie|%>
      <h4>
        <%=link_to movie.title, work_path(movie.id)%> <small>by <%= movie.creator%></small>
      </h4>
      <p>
        <%=movie.votes.count%> votes
      </p>
    <% end %>
    <p>
      <%= link_to "View more movies", movies_path%>
    </p>
  </section>

  <section class = "large-4 columns">
    <h3> Top Books</h3>
    <%@books.each do |book|%>
      <h4>
        <%=link_to book.title, work_path(book.id)%> <small>by <%= book.creator%></small>
      </h4>
      <p>
        <%=book.votes.count%> votes
      </p>
    <% end %>
    <p>
      <%= link_to "View more books", books_path%>
    </p>
  </section>

  <section class = "large-4 columns">
    <h3> Top Albums</h3>
    <%@albums.each do |album|%>
      <h4>
        <%=link_to album.title, work_path(album.id)%> <small>by <%= album.creator%></small>
      </h4>
      <p>
        <%=album.votes.count%> votes
      </p>
    <% end %>
    <p>
      <%= link_to "View more albums", albums_path%>
    </p>
  </section>
</div>
