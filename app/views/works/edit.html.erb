<h1>Edit this <%= @work.category %></h1>

<% if @work.errors.any? %>
  <ul>
    <% @work.errors.each do | field, msg | %>
      <li>
        <strong><%= field %> <%= msg %></strong>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @work, url: work_path(@work.id), method: :patch do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>

  <%= f.submit %>
<% end %>
