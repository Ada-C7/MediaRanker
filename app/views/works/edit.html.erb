<h2>Edit this <%= @work.category %></h2>

<section>
  <%= form_for @work do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.hidden_field :category, value: @work.category %>

    <%= f.submit %>

  <% end %>
</section>
