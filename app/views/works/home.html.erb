<h2>Media Spotlight: </h2>
<!-- @top.title -->

<section class="top-ten columns large-4 small-12">
  <h3>Top Movies: </h3>
  <ul>
    <% @movies[0...10].each do |movie| %>
      <li>
        <h4>
          <%= link_to movie.title, work_path(movie) %>
          <small>by <%= movie.by %></small>
        </h4>
        <p>## votes</p>
      </li>
    <% end %>
  </ul>
</section>

