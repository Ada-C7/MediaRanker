<h2>Top <%= params[:category].capitalize %></h2>
<ul><% @works.each do |work| %>
  <li>Votes: <%= work.votes.count %> Title: <%= link_to work.title, work_path(work.id) %> by <%= work.created_by %></li>
  <%= link_to "Upvote", vote_path(work.id), method: :post %>
<% end %>
</ul>

<p><%= link_to "View All Media", root_path %></p>
<p><%= link_to "Add a new #{params[:category].singularize}", new_work_path(params[:category]) %></p>
