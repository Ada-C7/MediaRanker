<h2>Top <%= params[:category].capitalize %></h2>
<table>
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>
      <tbody>
        <% @works.each do |work| %>
          <tr>
            <td><%= work.votes.count %> </td>
            <td><%= link_to work.title, work_path(work.id) %></td>
            <td><%= work.created_by %></td>
            <td><%= work.publication_year %></td>
            <td><%= link_to "Upvote", vote_path(work.id), method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<p class="button"><%= link_to "View All Media", root_path %></p>
<p class "button"><%= link_to "Add a new #{params[:category].singularize}", new_work_path(params[:category]) %></p>
