<h2>List of Books</h2>

<section id="category-table">
  <table>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
    <% @books.each do | book | %>
    <tr>
      <td><%= book.votes.length %></td>
      <td><%= link_to book.title, work_path(book.id) %></td>
      <td><%= book.creator %></td>
      <td><%= book.year %></td>
      <td>(upvote button)</td>
    </tr>
    <% end %>
  </table>
</section>

<%= link_to "View all media", root_path %>
<%= link_to "Add a new book", new_work_path %>
