<section class="category-view">
  <h1 class="category-header">List of Books</h1>

  <section class="category-table">
    <% if @books.empty? %>
      <p>
        No books found.
      </p>
      <% else %>

    <table>
      <tr>
        <th>
          Votes
        </th>
        <th>
          Title
        </th>
        <th>
          Created By
        </th>
        <th>
          Published
        </th>
        <th>
          Upvote
        </th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.votes_count %>
        </td>
        <td>
          <%= link_to book.title, work_path(book.id) %>
        </td>
        <td>
          <%= book.creator %>
        </td>
        <td>
          <%= book.published %>
        </td>
        <td>
          <%= link_to "Upvote", new_vote_path(book.id), method: :post %>
        </td>
      </tr>
      <% end %>
    </table>
    <% end %>
  </section>
  <section class="bottom-buttons">
    <ul>
      <li>
        <%= button_to "View All Media", works_path, method: :get %>
      </li>
      <li>
        <%= link_to "Add a New Book", new_work_path(@work, category: "book"), method: :get %>
      </li>
    </ul>
  </section>
</section>
