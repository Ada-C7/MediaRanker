<main>
  <section>
    <h3>Books</h3>
      <section>
        <table>
          <thead>
            <tr>
              <th>Votes</th>
              <th>Title</th>
              <th>Created By</th>
              <th>Published</th>
              <th>Upvote</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.votes.count %></td>
                <td><%= link_to book.title, work_path(book.id) %></td>
                <td><%= book.creator %></td>
                <td><%= book.publication_year %></td>
                <td><%= button_to "Upvote", vote_path(book.id), :class => "button", :method => :post %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </section>

  <nav>
    <%= button_to "Back To All Media", homepage_path, :class => "button", :method => :get %>
    <%= button_to "Add Book", new_book_path, :class => "button", :method => :get %>
  </nav>
</main>
