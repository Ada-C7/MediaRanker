<h1>List of Books</h1>
<table>
  <tr>
    <th>
      Votes
    </th>
    <th>
      Title
    </th>
    <th>
      Created By
    </th>
    <th>
      Published
    </th>
    <th>
      Upvote
    </th>
  </tr>

<% @works.each do |work| %>
<tr>
  <td>
  <%= work.votes.count %>
  </td>
  <td>
  <%= work.title %>
  </td>
  <td>
  <%= work.creator %>
  </td>
  <td>
  <%= work.publication_year %>
  </td>
  <td>
    <%= button_to "Upvote", works_path(work.id), method: :post %>
  </td>
</tr>
<% end %>
</table>
