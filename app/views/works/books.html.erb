<section class="row">
  <h2>List of Books</h2>

  <section id="category-table">
    <table>
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do | book | %>
        <tr>
          <td><%= book.votes.length %></td>
          <td><%= link_to book.title, work_path(book.id) %></td>
          <td><%= book.creator %></td>
          <td><%= book.year %></td>
          <td><%= link_to "Upvote", upvote_path(book.id), method: :post %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>

  <%= link_to "View all media", root_path %>
  <%= link_to "Add a new book", new_work_path %>

</section>
