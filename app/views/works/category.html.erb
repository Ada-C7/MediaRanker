

<section>
  <h1>List of <%= session[:category].capitalize + "s" %> </h1>
</section>


<section class="table_scroll">
  <table>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
    <% @works.each do |work| %>
    <tr>
      <td> <%=work.votes.count%> </td>
      <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator%></td>
      <td><%= work.publication_year%></td>
      <td><%= link_to "Upvote", upvote_path(work), method: :post%></td>
    </tr>
    <% end %>
  </table>
</section>

<section>
  <%= link_to "View all media", works_path%>
  <%= link_to "Add a new movie",
  if session[:category] == "album"
    new_album_path
  elsif session[:category] == "book"
    new_book_path
  elsif session[:category] == "movie"
    new_movie_path
  end
  %>
</section>
