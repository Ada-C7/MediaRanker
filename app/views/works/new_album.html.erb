<section class="form">
  <%= form_tag do %>
  <%= label_tag(:title, "Title") %>
  <%= text_field_tag(:title) %>

  <%= label_tag(:creator, "Creator") %>
  <%= text_field_tag(:creator) %>

  <%= label_tag(:publication_year, "Publication Year") %>
  <%= text_field_tag(:publication_year) %>

  <%= label_tag(:description, "Description") %>
  <%= text_field_tag(:description) %>

  <%= submit_tag("Add Album", class: "button") %>
  <% end %>
</section>
