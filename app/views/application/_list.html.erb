<h3>List of <%=@works.first.category%>s</h3>

<section>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created by</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
      <tr>
        <td></td>
        <td><%= work.title %></td>
        <td><%= work.creator %></td>
        <td><%= work.pub_year %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>



  </table>
</section>
