<h3>List of <%=@works.first.category%>s</h3>

<section class="media-table">
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created by</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
      <tr>
        <td></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.pub_year %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "View all media", works_path %>
  <%= link_to "Add a new #{@works.first.category}", new_work_path %>
</section>
