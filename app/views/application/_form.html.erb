
  <%= form_for @work do |f| %>
    <%= f.hidden_field :category, value: @work.category %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :pub_year, "Publication year" %>
    <%= f.text_field :pub_year %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit %>

  <% end %>
